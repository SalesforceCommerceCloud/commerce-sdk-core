{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": true,
        "sourceMap": true,
        "target": "ES6",
        "lib": ["ES6"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames":true,
        "importHelpers": true,
        "incremental": false,
        "moduleResolution": "Node",
        "noEmitOnError": true,
        "noErrorTruncation": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "skipLibCheck": true
    },
    // NOTE: Everything except what you want compiled into JS should be in the exclusions.
    "exclude": [
        "node_modules",
        "release",
        "test",
        "gulpfile.ts"
    ],
    "include": [
        "src"
    ]
}
